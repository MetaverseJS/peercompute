{
  "name": "peercompute-root",
  "private": true,
  "workspaces": [
    "peercompute",
    "demos/hyperborea",
    "demos/cubechat",
    "demos/daddygo",
    "demos/planetgen",
    "demos/universes",
    "demos/webgpuphys",
    "demos/sneakywoods"
  ],
  "scripts": {
    "dev:relay": "npm --prefix peercompute run relay",
    "dev:hyperborea": "npm --prefix demos/hyperborea run dev -- --host",
    "dev:cubechat": "npm --prefix demos/cubechat run dev -- --host",
    "dev:planetgen": "npm --prefix demos/planetgen run dev -- --host",
    "dev:universes": "npm --prefix demos/universes run dev -- --host",
    "dev:webgpuphys": "npm --prefix demos/webgpuphys run dev -- --host",
    "dev:sneakywoods": "npm --prefix demos/sneakywoods run dev -- --host",
    "dev:daddygo": "npm --prefix demos/daddygo run dev -- --host",
    "dev": "bash scripts/dev-all.sh",
    "docs:dev": "vite --config vite.docs.config.mjs",
    "docs:preview": "vite preview --config vite.docs.config.mjs",
    "test:runtime": "node demos/tests/runtime-smoke.mjs",
    "build:hyperborea": "npm --prefix demos/hyperborea run build",
    "build:cubechat": "npm --prefix demos/cubechat run build",
    "build:planetgen": "npm --prefix demos/planetgen run build",
    "build:universes": "npm --prefix demos/universes run build",
    "build:webgpuphys": "npm --prefix demos/webgpuphys run build",
    "build:sneakywoods": "npm --prefix demos/sneakywoods run build",
    "build:daddygo": "npm --prefix demos/daddygo run build",
    "build:peercompute": "npm --prefix peercompute run build",
    "build:demos": "npm run build:hyperborea && npm run build:cubechat && npm run build:planetgen && npm run build:universes && npm run build:webgpuphys && npm run build:sneakywoods && npm run build:daddygo",
    "build:all": "bash scripts/build-all.sh",
    "build": "npm run build:all"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "vite": "^6.4.1"
  }
}
